<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exchangeRates_RowLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/grey"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <TextView
        android:id="@+id/currencyName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="AUD:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currencyValue_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0.3682"
        app:layout_constraintBottom_toBottomOf="@+id/currencyName_textView"
        app:layout_constraintStart_toEndOf="@+id/currencyName_textView"
        app:layout_constraintTop_toTopOf="@+id/currencyName_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>